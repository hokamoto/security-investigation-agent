# SIEM Agent Configuration

# ClickHouse Connection
clickhouse:
  host: "your-clickhouse-host.com"
  port: 8123
  database: "default"
  user: "default"
  password: ""
  siem_log_table_name: "siem"
  cdn_log_table_name: "logs"
  max_result_rows: 300  # Maximum rows per query (triggers exception if exceeded)

# Agent Behavior
agent:
  max_iterations: 70
  max_replanning_rounds: 2  # Maximum number of re-planning iterations (each round can generate 1-10 new queries)
  excluded_rule_tag_prefixes:  # Rule tag prefixes to exclude from LLM context
    - "AKAMAI/APPSEC/"
    - "LLM/"
